{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,
  "MD003": { "style": "atx" },
  "MD007": { "indent": 2 },
  "MD013": {
    "line_length": 222,
    "code_blocks": false,
    "tables": false,
    "headings": false,
    "stern": true
  },
  "MD022": { 
    "lines_above": 1,
    "lines_below": 1 
  },
  "MD024": { 
    "allow_different_nesting": true,
    "siblings_only": true 
  },
  "MD025": { "level": 1 },
  "MD026": { "punctuation": ".,;:!?" },
  "MD029": { "style": "ordered" },
  "MD031": true,
  "MD032": true,
  "MD033": { 
    "allowed_elements": [
      "details", 
      "summary", 
      "br", 
      "hr", 
      "img", 
      "div", 
      "span", 
      "sup", 
      "sub",
      "kbd",
      "mark"
    ] 
  },
  "MD034": false,
  "MD036": { "punctuation": ".,;:!?" },
  "MD040": true,
  "MD041": { "level": 1 },
  "MD046": { "style": "fenced" },
  "MD049": { "style": "underscore" },
  "MD050": { "style": "asterisk" },
  "MD056": true
}