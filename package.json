{
  "name": "communitee-control-hub",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:md": "markdownlint \"**/*.md\"",
    "lint:md:fix": "markdownlint \"**/*.md\" --fix",
    "lint:all": "npm run lint && npm run lint:md",
    "prebuild": "echo 'Skipping prebuild linting for Supabase integration testing'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:security": "vitest run src/test/security/",
    "test:unit": "vitest run src/test/lib/ src/test/stores/ src/test/services/",
    "test:components": "vitest run src/components/",
    "test:e2e": "playwright test",
    "analyze:dead-code": "knip",
    "analyze:exports": "ts-prune",
    "analyze:deps": "depcheck",
    "analyze:all": "npm run analyze:dead-code && npm run analyze:exports && npm run analyze:deps",
    "monitor:quality": "node scripts/code-quality-monitor.js",
    "ci:validate": "tsx scripts/ci-cd-validation.ts",
    "ci:validate:staging": "tsx scripts/ci-cd-validation.ts staging",
    "ci:validate:production": "tsx scripts/ci-cd-validation.ts production",
    "ci:quality-gates": "npm run lint:all && npx tsc --noEmit --strict && npm audit --audit-level=moderate",
    "ci:test-all": "npm run test:unit && npm run test:security && npm run test:components",
    "ci:build-validate": "npm run build && node -e \"console.log('Build validation passed')\"",
    "performance:lighthouse": "lhci autorun",
    "health:check": "curl -f http://localhost:3000/api/health || exit 1",
    "test:accessibility": "vitest run src/test/accessibility/ --reporter=verbose",
    "test:phase1": "npm run analyze:all && npm run ci:validate",
    "test:phase2": "npm run lint:all && npm run monitor:quality",
    "test:phase3": "npm run monitor:quality && npm run test:accessibility",
    "test:phase4": "npm run test:unit && npm run ci:quality-gates && npm run lint:all",
    "test:phase5": "npm run ci:test-all && npm run test:coverage && npm run test:security",
    "test:phase6": "npm run ci:build-validate && npm run health:check",
    "test:phase7": "npm run validate:avarice && npm run ci:validate:production",
    "test:phase8": "npm run monitor:quality && npm run validate:avarice",
    "test:phase9": "npm run health:check && npm run validate:avarice",
    "validate:avarice": "tsx scripts/avarice-protocol-validator.ts",
    "validate:markdown-quality": "./scripts/validate-markdown-quality.sh",
    "validate:avarice-docs": "./avarice-protocol/scripts/validate-avarice-docs.sh",
    "validate:evidence": "./scripts/validate-evidence-markdown.sh",
    "lint:md:avarice": "markdownlint 'avarice-protocol/**/*.md' 'docs/evidence/**/*.md'",
    "spell:avarice": "cspell 'avarice-protocol/**/*.md' 'docs/evidence/**/*.md' --no-progress",
    "db:init": "npx tsx scripts/init-supabase-direct.ts",
    "db:init:sample": "npx tsx scripts/init-supabase.ts --with-sample-data",
    "db:seed": "npx tsx scripts/seed-sample-data.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-toast": "^1.2.14",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "@tanstack/react-table": "^8.21.3",
    "@types/dompurify": "^3.0.5",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.2.6",
    "dotenv": "^17.2.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.534.0",
    "next": "15.4.5",
    "next-themes": "^0.4.6",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-day-picker": "^9.8.1",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.61.1",
    "recharts": "^3.1.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^4.0.14",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest-axe": "^3.5.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "eslint": "^9",
    "eslint-config-next": "^15.4.5",
    "glob": "^11.0.3",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "markdownlint-cli": "^0.45.0",
    "playwright": "^1.54.2",
    "postcss-load-config": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
