{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,
  "MD001": false,
  "MD003": { "style": "atx" },
  "MD007": { "indent": 2 },
  "MD013": { 
    "line_length": 444,
    "code_blocks": false,
    "tables": false,
    "headings": false,
    "headers": false,
    "stern": true
  },
  "MD022": { "lines_above": 1, "lines_below": 1 },
  "MD024": { "allow_different_nesting": true },
  "MD025": { "front_matter_title": "^\\s*title\\s*[:=]" },
  "MD026": { "punctuation": ".,;:!。，；：！" },
  "MD029": { "style": "ordered" },
  "MD031": { "list_items": true },
  "MD032": { "list_items": true },
  "MD033": {
    "allowed_elements": [
      "details", "summary", "br", "div", "span", "img", "a", "strong", "em",
      "code", "pre", "blockquote", "ul", "ol", "li", "h1", "h2", "h3", "h4", "h5", "h6",
      "table", "thead", "tbody", "tr", "th", "td", "hr", "p", "sub", "sup"
    ]
  },
  "MD034": false,
  "MD036": false,
  "MD040": true,
  "MD041": false,
  "MD046": { "style": "fenced" },
  "MD049": { "style": "asterisk" },
  "MD050": { "style": "asterisk" }
}
